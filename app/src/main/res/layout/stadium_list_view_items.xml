<?xml version="1.0" encoding="utf-8"?> <!--TODO: Cambiar la estructura para poner estadios-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.github.snowdream.android.widget.SmartImageView
            android:id="@+id/imgStadiumIcon"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/txtNombreEstadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/md_white_1000"
            android:layout_gravity="center"
            android:textColor="@color/md_black_1000"
            android:text=""/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtidTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>